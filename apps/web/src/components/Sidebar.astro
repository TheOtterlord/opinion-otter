---
import { Icon } from 'astro-icon/components'
import SidebarItem from '../components/SidebarItem.astro'
import type { Item, Group } from '../lib/sidebar'
import Combobox, { type Item as Project } from '../components/Combobox.astro'

interface Props {
  icon: string
  items: (Item | Group)[]
  projects: Project[]
}

const {
  icon,
  items,
  projects
} = Astro.props
---

<div class="hidden border-r bg-zinc-100/40 lg:block dark:bg-zinc-800/40 dark:border-zinc-700/50">
  <div class="flex flex-col gap-2">
    <div class="flex h-[60px] items-center px-6">
      <a class="flex items-center gap-2 font-semibold dark:text-white" href="/opinion-otter">
        <Icon name={icon} class="w-6 h-6"/>
        <span>Opinion Otter</span>
      </a>
    </div>

    <div class="flex-1 overflow-auto py-2">
      <!-- <Combobox items={projects}/> -->
      <nav class="grid items-start px-4 text-sm font-medium">
        {
          items.map(item => <SidebarItem {item}/>)
        }
      </nav>
    </div>
  </div>
</div>
